<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Group xmlns:fx="http://javafx.com/fxml" fx:controller="edu.virginia.cs.gui.reviewGUICon">
    <VBox alignment="CENTER" spacing="20" style="-fx-alignment: center;">
        <Label text="Create Account" style="-fx-font-size: 20pt;"/>
        <GridPane>
            <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 16pt;"/>
            <TextField fx:id="newUsernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 16pt;"/>
            <TextField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 16pt;"/>
            <TextField fx:id="confirmPassword" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>
        <Button text="Submit" onAction="#createAccountSubmit"/>
    </VBox>
</Group>
