<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.Group?>
<Pane xmlns:fx="http://javafx.com/fxml" fx:controller="edu.virginia.cs.gui.reviewDisplayCon"
      prefWidth="800" prefHeight="600">
    <Group layoutX="50" layoutY="25">
        <VBox alignment="CENTER" spacing="20" style="-fx-alignment: center;" layoutX="200" layoutY="200">
            <Label text="" fx:id="courseLabel" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 16pt;"/>
            <Label text="" fx:id="averageLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 16pt;"/>
            <TextArea fx:id="reviewsTextArea" text="" prefWidth="400" prefHeight="200" wrapText="true" editable="false"/>
            <HBox alignment="CENTER" spacing="20" style="-fx-alignment: center;">
                <Button fx:id="backButton" text="Back to Main Menu" onAction="#mainMenu"/>
                <Button fx:id="but" text="Press to View Reviews" onAction="#meow"/>
            </HBox>
        </VBox>
    </Group>
</Pane>